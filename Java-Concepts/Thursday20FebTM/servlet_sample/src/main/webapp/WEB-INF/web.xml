<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>First.html</welcome-file>  <!-- Added First.html as another welcome file -->
    </welcome-file-list>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.example.sample.Validation</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Welcome</servlet-name>
        <servlet-class>com.example.sample.WelcomeUser</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>InitParamExample</servlet-name>
        <servlet-class>mypack.InitParamExample</servlet-class>
        <init-param>
            <param-name>address</param-name>
            <param-value>Chennai</param-value>
        </init-param>
        <init-param>
            <param-name>email</param-name>
            <param-value>abcd@gmail.com</param-value>
        </init-param>
        <init-param>
            <param-name>phone</param-name>
            <param-value>9384564715</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>OnServletContext</servlet-name>
        <servlet-class>com.example.sample.OnServletContext</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/loginPage</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Welcome</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>InitParamExample</servlet-name>
        <url-pattern>/InitParamExample</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>OnServletContext</servlet-name>
        <url-pattern>/onContext</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>n1</param-name>
        <param-value>Value1</param-value>
    </context-param>

    <context-param>
        <param-name>n2</param-name>
        <param-value>Value2</param-value>
    </context-param>

    <context-param>
        <param-name>p1</param-name>
        <param-value>ABCD</param-value>
    </context-param>

    <context-param>
        <param-name>p2</param-name>
        <param-value>AIA</param-value>
    </context-param>
</web-app>